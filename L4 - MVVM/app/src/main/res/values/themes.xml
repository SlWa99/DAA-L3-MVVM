<?xml version="1.0" encoding="utf-8"?>
<!--
    Nom du fichier : themes.xml
    Description    : Définit les styles et thèmes pour l'application,
                     incluant un thème personnalisé basé sur Material3
                     pour les modes jour et nuit sans barre d'action.
    Auteur         : Bugna, Slimani & Steiner
    Date           : 22 novembre 2024
-->
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="DAA.Theme.Template" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="android:windowBackground">@android:color/white</item>
        <item name="windowActionBar">false</item>
        <!-- Utiliser des Toolbars personnalisées -->
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.DAA" parent="DAA.Theme.Template" />
</resources>